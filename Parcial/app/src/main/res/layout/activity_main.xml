<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.labsoftware.parcial.MainActivity">

    <!-- text view para espaciar -->
    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="150dp" />

    <!-- text view donde se mostrarán las operaciones -->
    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView"
        android:id="@+id/texto"
        android:gravity="right"
        android:layout_alignParentStart="true"
        android:layout_height="50dp"
        android:textSize="40sp" />

    <!-- boton num.6 -->
    <Button
        android:text="6"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content" />

    <!-- boton num.5 -->
    <Button
        android:text="5"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button2"
        android:layout_alignStart="@+id/button5"
        android:id="@+id/button6"
        android:layout_width="wrap_content" />

    <!-- boton num.2 -->
    <Button
        android:text="2"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button3"
        android:layout_alignStart="@+id/button6"
        android:id="@+id/button7"
        android:layout_width="wrap_content" />

    <!-- boton num.4 -->
    <Button
        android:text="4"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:layout_alignTop="@+id/button6"
        android:layout_alignStart="@+id/button9"
        android:layout_width="wrap_content" />

    <!-- boton num.1 -->
    <Button
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/button7"
        android:layout_alignStart="@+id/button11"
        android:id="@+id/button12" />

    <!-- boton num.3 -->
    <Button
        android:text="3"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_below="@+id/button2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <!-- boton num.0 -->
    <Button
        android:text="0"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentStart="true" />

    <!-- boton num.8 -->
    <Button
        android:text="8"
        android:layout_height="wrap_content"
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_above="@+id/button6"
        android:layout_toEndOf="@+id/button"
        android:layout_margin="5dp" />

    <!-- boton num.9 -->
    <Button
        android:text="9"
        android:id="@+id/button"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="5dp" />

    <!-- boton de resta -->
    <Button
        android:text="-"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button24"
        android:layout_alignTop="@+id/button12"
        android:layout_alignStart="@+id/button23" />

    <!-- boton de dividir -->
    <Button
        android:text="÷"
        android:layout_height="wrap_content"
        android:id="@+id/button22"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/button9"
        android:layout_width="wrap_content" />

    <!-- boton num.7 -->
    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_toEndOf="@+id/button5" />

    <!-- boton de resultado -->
    <Button
        android:text="="
        android:layout_height="wrap_content"
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_alignBaseline="@+id/button4"
        android:layout_alignBottom="@+id/button4"
        android:layout_alignStart="@+id/button7" />

    <!-- boton de suma -->
    <Button
        android:text="+"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button25"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignStart="@+id/button24" />

    <!-- boton porcentaje o punto -->
    <Button
        android:text="%/."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button13"
        android:layout_alignBaseline="@+id/button8"
        android:layout_alignBottom="@+id/button8"
        android:layout_toEndOf="@+id/button5" />

    <!-- boton multiplicación -->
    <Button
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button23"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentEnd="true" />

    <!-- boton de borrar -->
    <Button
        android:text="Del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button5"
        android:id="@+id/button10" />

</RelativeLayout>
